<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FinanceApp</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
    .sidebar-link.active {
      background-color: rgb(59, 130, 246);
      color: white;
      font-weight: 500;
    }
  </style>
</head>
<body class="h-full bg-gray-50">
<div class="flex h-full">
  <!-- Sidebar -->
  <aside class="w-64 bg-white border-gray-200 border-r flex flex-col min-h-screen p-6">
    <div class="mb-6 text-xl font-bold text-gray-800">FinanceApp</div>
    <nav class="flex flex-col space-y-2">
      <a href="/dashboard" class="px-3 py-2 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors">Home</a>
      <a href="/dashboard/categories" class="px-3 py-2 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors">Categories</a>
      <a href="/dashboard/budgets" class="px-3 py-2 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors">Budgets</a>
      <a href="/dashboard/transactions" class="px-3 py-2 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors">Transactions</a>
      <a href="/dashboard/savings" class="px-3 py-2 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors">Savings Goals</a>
    </nav>

    <!-- User Profile Section -->
    <div class="mt-auto pt-6 border-t border-gray-200">
      <div class="flex items-center space-x-3 p-3 rounded-lg bg-gray-50">
        <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold text-sm">
          JD
        </div>
        <div class="flex-1 min-w-0">
          <div class="font-medium text-gray-900 truncate"><%= user.firstName %> <%= user.lastName %></div>
          <div class="text-xs text-gray-500 truncate"><%= user.email %></div>
        </div>
      </div>

      <div class="mt-2 flex flex-col space-y-1">
        <a href="/dashboard/profile" class="px-3 py-2 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors flex items-center space-x-2">
          <i class="fas fa-user w-4 text-center"></i>
          <span>Profile</span>
        </a>
        <form action="/users/logout" method="GET" class="w-full">
          <button type="submit" class="w-full px-3 py-2 rounded-lg text-gray-600 hover:bg-red-50 hover:text-red-600 transition-colors flex items-center space-x-2 text-left">
            <i class="fas fa-sign-out-alt w-4 text-center"></i>
            <span>Logout</span>
          </button>
        </form>
      </div>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 flex flex-col overflow-hidden bg-white">
    <!-- Content Area -->
    <div class="flex-1 overflow-y-auto p-6">
      <%- body %>
    </div>
  </main>
</div>
</body>
</html>