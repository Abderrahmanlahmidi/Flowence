<% if (error) { %>
<div id="toast" 
  class="fixed top-5 right-5 z-50 flex items-center max-w-xs p-4 mb-4 text-red-700 bg-red-50 border border-red-200 rounded-lg shadow dark:text-red-400 dark:bg-red-900/20 dark:border-red-800" 
  role="alert">
  
  <div class="text-sm font-medium flex-1">
    <%= error %>
  </div>
  
  <button type="button" 
    onclick="this.parentElement.style.display='none'" 
    class="ml-3 text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300">
    âœ•
  </button>
</div>
<% } %>
