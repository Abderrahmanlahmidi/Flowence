<% if ((typeof error !== "undefined" && error) || (typeof success !== "undefined" && success)) { %>
  <div id="toast" class="fixed top-5 right-5 z-50 flex items-center max-w-xs p-4 mb-4 rounded-lg shadow-lg transform transition-all duration-300 ease-in-out 
      <%= error ? 'text-red-800 bg-red-50 border border-red-200' : '' %> 
      <%= success ? 'text-green-800 bg-green-50 border border-green-200' : '' %>" role="alert">
    <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg 
        <%= error ? 'text-red-500 bg-red-100' : '' %> 
        <%= success ? 'text-green-500 bg-green-100' : '' %>">
      <% if (error) { %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
      <% } else if (success) { %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
      <% } %>
    </div>
    <div class="ml-3 text-sm font-medium flex-1"><%= error || success %></div>
    <button type="button" onclick="hideToast()" class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex h-8 w-8 <%= error ? 'text-red-500 hover:bg-red-200 focus:ring-red-400' : '' %> <%= success ? 'text-green-500 hover:bg-green-200 focus:ring-green-400' : '' %> transition-colors duration-200">
      <span class="sr-only">Close</span>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </button>
  </div>
<% } %>

<div class="space-y-6 mb-6">
  <!-- Page Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Savings Goals</h1>
      <p class="text-gray-600 mt-1">Track and manage your savings goals</p>
    </div>
    <div class="flex items-center gap-2 text-sm text-gray-500">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span><%= new Date().toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %></span>
    </div>
  </div>

<!-- Add Saving Goal Form -->
<div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
  <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
    <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
    </svg>
    Add New Saving Goal
  </h2>
  <form action="/dashboard/savings" method="POST" class="grid grid-cols-1 md:grid-cols-4 gap-4">
    
    <div class="space-y-1">
      <label class="text-sm font-medium text-gray-700">Title</label>
      <input name="title" type="text" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white text-gray-900 transition-colors" placeholder="e.g., New Car, Vacation, Emergency Fund" required>
    </div>

    <div class="space-y-1">
      <label class="text-sm font-medium text-gray-700">Category</label>
      <select name="categoryId" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white text-gray-900 transition-colors" required>
        <option value="">Select a category</option>
        <% categories.forEach(cat => { %>
          <option value="<%= cat.id %>"><%= cat.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="space-y-1">
      <label class="text-sm font-medium text-gray-700">Target Amount</label>
      <input name="targetAmount" type="number" step="0.01" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white text-gray-900 transition-colors" placeholder="0.00" min="0" required>
    </div>

    <div class="space-y-1">
      <label class="text-sm font-medium text-gray-700">Deadline</label>
      <input name="deadline" type="date" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white text-gray-900 transition-colors" min="<%= new Date().toISOString().split('T')[0] %>" required>
    </div>

    <div class="md:col-span-4">
      <button type="submit" class="w-full px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 font-medium flex items-center justify-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Add Goal
      </button>
    </div>
  </form>
</div>

  <!-- Goals Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
        <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        Goals Overview
      </h2>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Title</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Category</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Target Amount</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Deadline</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% savings.forEach(goal => { %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="w-3 h-3 rounded-full bg-blue-500"></div>
                  <span class="text-sm font-medium text-gray-900"><%= goal.title %></span>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600">
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 rounded-full bg-green-500"></div>
                  <%= goal.Category.name %>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= goal.targetAmount %> MAD</td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= goal.deadline.toISOString().split('T')[0] %></td>
              <td class="px-6 py-4">
                <div class="flex items-center gap-2">
                  <button onclick="openUpdateForm('<%= goal.id %>', '<%= goal.title %>', '<%= goal.categoryId %>', '<%= goal.targetAmount %>', '<%= goal.deadline.toISOString().split('T')[0] %>')" 
                          class="p-2 text-yellow-600 hover:bg-yellow-50 rounded-lg transition-colors duration-200" title="Edit goal">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </button>
                  
                  <form action="/dashboard/savings/delete/<%= goal.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this goal?');" class="inline">
                    <button type="submit" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors duration-200" title="Delete goal">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal Update -->
<div id="updateFormContainer" class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center hidden z-50 p-4">
  <div class="bg-white p-6 rounded-xl shadow-xl w-full max-w-md border border-gray-200 transform transition-all duration-300 ease-out">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-800 flex items-center gap-2">
        <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Update Saving Goal
      </h2>
      <button onclick="closeUpdateForm()" class="text-gray-400 hover:text-gray-600 transition-colors p-1 rounded-lg hover:bg-gray-100">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <form id="updateGoalForm" method="POST" class="space-y-4">
      <div class="space-y-2">
        <label class="text-sm font-medium text-gray-700">Title</label>
        <input type="text" name="title" id="updateTitle" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-900 transition-colors" required>
      </div>
      <div class="space-y-2">
        <label class="text-sm font-medium text-gray-700">Category</label>
        <select name="categoryId" id="updateCategory" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-900 transition-colors" required>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.id %>"><%= cat.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="space-y-2">
        <label class="text-sm font-medium text-gray-700">Target Amount</label>
        <input type="number" step="0.01" name="targetAmount" id="updateTargetAmount" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-900 transition-colors" required>
      </div>
      <div class="space-y-2">
        <label class="text-sm font-medium text-gray-700">Deadline</label>
        <input type="date" name="deadline" id="updateDeadline" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-900 transition-colors" required>
      </div>
      <div class="flex justify-end gap-3 pt-4">
        <button type="button" onclick="closeUpdateForm()" class="px-6 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium">
          Cancel
        </button>
        <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 font-medium flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Update Goal
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  function hideToast() {
    const toast = document.getElementById('toast');
    if (toast) {
      toast.style.transform = 'translateX(100%)';
      toast.style.opacity = '0';
      setTimeout(() => toast.remove(), 300);
    }
  }
  setTimeout(hideToast, 5000);

  function openUpdateForm(id, title, categoryId, targetAmount, deadline) {
    document.getElementById("updateGoalForm").action = "/dashboard/savings/update/" + id;
    document.getElementById("updateTitle").value = title;
    document.getElementById("updateCategory").value = categoryId;
    document.getElementById("updateTargetAmount").value = targetAmount;
    document.getElementById("updateDeadline").value = deadline;
    document.getElementById("updateFormContainer").classList.remove("hidden");
    document.body.style.overflow = 'hidden';
  }

  function closeUpdateForm() {
    document.getElementById("updateFormContainer").classList.add("hidden");
    document.body.style.overflow = 'auto';
  }


  document.getElementById('updateFormContainer').addEventListener('click', function(e) {
    if (e.target === this) {
      closeUpdateForm();
    }
  });

  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && !document.getElementById('updateFormContainer').classList.contains('hidden')) {
      closeUpdateForm();
    }
  });
</script>