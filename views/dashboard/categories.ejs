<% if ((typeof error !== "undefined" && error) || (typeof success !== "undefined" && success)) { %>
<div
  id="toast"
  class="fixed top-5 right-5 z-50 flex items-center max-w-xs p-4 mb-4 rounded-lg shadow
    <%= error ? 'text-red-700 bg-red-50 border border-red-200 dark:text-red-400 dark:bg-red-900/20 dark:border-red-800' : '' %>
    <%= success ? 'text-green-700 bg-green-50 border border-green-200 dark:text-green-400 dark:bg-green-900/20 dark:border-green-800' : '' %>"
  role="alert"
>
  <div class="text-sm font-medium flex-1">
    <%= error || success %>
  </div>

  <button
    type="button"
    onclick="this.parentElement.style.display='none'"
    class="<%= error ? 'ml-3 text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300' : '' %>
           <%= success ? 'ml-3 text-green-500 hover:text-green-700 dark:text-green-400 dark:hover:text-green-300' : '' %>"
  >
    âœ•
  </button>
</div>
<% } %>

<div class="space-y-6 mb-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Categories</h1>
    <p class="text-gray-600 dark:text-gray-400">
      Manage your expense categories
    </p>
  </div>

  <!-- Add Category Form -->
  <div
    class="bg-white dark:bg-slate-800 p-6 rounded-lg shadow border border-slate-200 dark:border-slate-700"
  >
    <h2 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-4">
      Add New Category
    </h2>
    <form
      id="updateForm" 
      action="/dashboard/budgets/update/<%= budget.id %>"
      method="post"
      class="grid grid-cols-1 md:grid-cols-3 gap-4"
    >
      <input
        name="name"
        type="text"
        placeholder="Category Name"
        class="p-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <input
        name="description"
        type="text"
        placeholder="Description"
        class="p-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button
        type="submit"
        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
      >
        Add Category
      </button>
    </>
  </div>

  <!-- Categories Table -->
  <div
    class="bg-white dark:bg-slate-800 p-6 rounded-lg shadow border border-slate-200 dark:border-slate-700"
  >
    <h2 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-4">
      All Categories
    </h2>
    <table
      class="min-w-full border border-slate-200 dark:border-slate-700 rounded-lg overflow-hidden"
    >
      <thead class="bg-slate-50 dark:bg-slate-700">
        <tr>
          <th
            class="px-4 py-3 text-left text-sm font-medium text-slate-600 dark:text-slate-300"
          >
            Name
          </th>
          <th
            class="px-4 py-3 text-left text-sm font-medium text-slate-600 dark:text-slate-300"
          >
            Description
          </th>
          <th
            class="px-4 py-3 text-left text-sm font-medium text-slate-600 dark:text-slate-300"
          >
            Created At
          </th>
          <th
            class="px-4 py-3 text-left text-sm font-medium text-slate-600 dark:text-slate-300"
          >
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
        <% categories.forEach(cat => { %>
  <tr>
    <td class="px-4 py-3 text-slate-600 dark:text-slate-400"><%= cat.name %></td>
    <td class="px-4 py-3 text-slate-600 dark:text-slate-400"><%= cat.description %></td>
    <td class="px-4 py-3 text-slate-600 dark:text-slate-400"><%= cat.createdAt.toISOString().split('T')[0] %></td>
    <td class="px-4 py-3">
<form action="/dashboard/category/delete/<%= cat.id %>" method="POST" onsubmit="return confirm('Are you sure?');">
      <button type="submit" class="px-2 py-1 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
        Delete
      </button>
    </form>
    </td>
  </tr>
<% }) %>

      </tbody>
    </table>
  </div>
</div>
